{
  "version": 10,
  "include": ["../cmake-version.json"],
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default",
      "description": "The base configuration preset that all other configuration presets inherit from.",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "displayName": "Default",
      "description": "The base build preset that all other build presets inherit from.",
      "configurePreset": "default",
      "hidden": true
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "displayName": "Default",
      "description": "The base test preset that all other build presets inherit from.",
      "configurePreset": "default",
      "hidden": true
    }
  ],
  "packagePresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "generators": [
        "TGZ"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "default"
        },
        {
          "type": "test",
          "name": "default"
        },
        {
          "type": "package",
          "name": "default"
        }
      ]
    }
  ]
}
