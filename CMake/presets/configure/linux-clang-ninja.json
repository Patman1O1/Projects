{
  "version": 10,
  "include": ["../cmake-version.json", "linux.json"],
  "configurePresets": [
    {
      "name": "linux-clang-ninja",
      "displayName": "Linux Clang Ninja",
      "description": "A configuration preset for Linux that uses the Clang compiler and Ninja build generator.",
      "inherits": "linux",
      "hidden": false,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang-make",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    }
  ]
}
