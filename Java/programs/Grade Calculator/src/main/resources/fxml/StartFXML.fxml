<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gradecalc.gui.StartController"
      fx:id = "root"
      prefWidth="300.0"
      prefHeight="250.0"
      spacing="20.0"
      alignment="CENTER"
      styleClass="vbox">

    <Button fx:id="courseButton"
            text="Calculate Course Grade"
            onAction="#showCourseScene"
            prefWidth="200.0"
            styleClass="button"/>

    <Button fx:id="exitButton"
            text="Exit"
            onAction="#handleExit"
            prefWidth="200.0"
            styleClass="button"/>
</VBox>
