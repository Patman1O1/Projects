@PACKAGE_INIT@

# Helper macro to import the static target
macro(import_static_target)
    if(NOT EXISTS "${CMAKE_CURRENT_LIST_DIR}/lambda-static-targets.cmake")
        set(${CMAKE_FIND_PACKAGE_NAME}_NOT_FOUND_MESSAGE "lambda static libraries were requested but not found")
        set(${CMAKE_FIND_PACKAGE_NAME}_FOUND OFF)
        return()
    endif()

    include("${CMAKE_CURRENT_LIST_DIR}/lambda-static-targets.cmake")
endmacro()

# Only import if not already defined
if(NOT TARGET lambda::lambda)
    import_static_target()
    check_required_components(lambda)
    message("-- Found static lambda (version ${${CMAKE_FIND_PACKAGE_NAME}_VERSION})")
endif()
